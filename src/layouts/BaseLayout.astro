---
import { personalInfo } from '../data/portfolio.js';
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | {personalInfo.name}</title>
    <meta name="description" content={description} />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/src/styles/main.css">
</head>
<body>
    <div class="layout-container">
        <Sidebar />

        <main>
            <slot /> {/* Aquí es donde se insertará el contenido específico de cada página */}
        </main>
    </div>

    <Footer />
</body>
</html>

<style is:global>
    :root {
        --primary-color: #3b82f6; /* Azul brillante */
        --primary-dark: #2563eb;  /* Azul oscuro */
        --primary-color-light: #cfe2ff; /* Azul muy claro */
        --secondary-color: #1f2937; /* Gris oscuro para texto/títulos */
        --text-light: #4b5563;    /* Gris medio para texto secundario */
        --bg-light: #f9fafb;      /* Fondo muy claro */
        --bg-dark: #111827;       /* Fondo muy oscuro (para footer, sidebar móvil, etc.) */
        --card-bg: #ffffff;       /* Fondo de las tarjetas/secciones */
        --border-color: #e5e7eb;  /* Borde de elementos */
        --shadow-color: rgba(0, 0, 0, 0.1); /* Sombra estándar */

        --font-family: 'Poppins', sans-serif;
        --sidebar-width: 280px;
    }

    body.dark-mode {
        --primary-color: #60a5fa; /* Azul claro en dark mode */
        --primary-dark: #3b82f6;  /* Azul brillante en dark mode */
        --primary-color-light: #1e3a8a; /* Azul muy oscuro para hover */
        --secondary-color: #e0e0e0; /* **NUEVO: Gris muy claro para texto/títulos en dark mode** */
        --text-light: #b0b0b0;    /* **NUEVO: Gris claro para texto secundario en dark mode** */
        --bg-light: #1f2937;      /* Fondo más oscuro para el cuerpo */
        --bg-dark: #000000;       /* Negro puro o casi para footer/sidebar móvil */
        --card-bg: #111827;       /* Fondo de las tarjetas/secciones en oscuro */
        --border-color: #374151;  /* Borde más oscuro */
        --shadow-color: rgba(0, 0, 0, 0.5); /* Sombra más pronunciada en oscuro */
    }

    /* ESTILOS BÁSICOS Y RESET GLOBALES */
    body {
        font-family: var(--font-family);
        margin: 0;
        padding: 0;
        background-color: var(--bg-light);
        color: var(--secondary-color);
        line-height: 1.6;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        scroll-behavior: smooth;
    }

    *, *::before, *::after {
        box-sizing: border-box;
    }

    h1, h2, h3, h4, h5, h6 {
        color: var(--secondary-color);
        margin-top: 0;
        font-weight: 700;
        line-height: 1.2;
    }

    p {
        margin-bottom: 1em;
    }

    a {
        color: var(--primary-color);
        text-decoration: none;
        transition: color 0.3s ease, transform 0.2s ease;
    }

    a:hover {
        color: var(--primary-dark);
        text-decoration: underline;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 0 25px;
    }

    /* BOTONES GLOBALES */
    .btn {
        display: inline-block;
        padding: 14px 30px;
        border-radius: 8px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: background-color 0.3s ease, color 0.3s ease, transform 0.2s ease;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        font-size: 0.95em;
        border: none;
        cursor: pointer;
    }

    .primary-btn {
        background-color: var(--primary-color);
        color: white;
        border: 2px solid var(--primary-color);
    }

    .primary-btn:hover {
        background-color: var(--primary-dark);
        border-color: var(--primary-dark);
        color: white;
        transform: translateY(-3px);
        text-decoration: none;
        box-shadow: 0 6px 12px rgba(0,0,0,0.15);
    }

    /* --- Layout de dos columnas (estilos base que afectan a la estructura principal) --- */
    .layout-container {
        display: flex;
        min-height: 100vh;
        position: relative;
    }

    main {
        flex-grow: 1;
        padding: 40px;
        overflow-y: auto;
        background-color: var(--main-content-bg);
    }

    /* Estilos generales para las secciones que permanecen globales */
    section {
        padding: 60px 0;
        margin-bottom: 40px;
        background-color: var(--card-bg);
        box-shadow: 0 6px 20px var(--shadow-color);
        border-radius: 12px;
    }

    section:last-of-type {
        margin-bottom: 0;
    }

    section h2 {
        text-align: center;
        font-size: 3em;
        margin-bottom: 50px;
        color: var(--primary-color);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* RESPONSIVE DESIGN para el layout general */
    @media (max-width: 768px) {
        .layout-container {
            flex-direction: column;
        }

        main {
            padding: 20px;
        }

        section {
            padding: 40px 15px;
            margin-bottom: 30px;
        }

        section h2 {
            font-size: 2.2em;
            margin-bottom: 30px;
        }
    }
</style>