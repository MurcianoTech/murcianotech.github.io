---
import { personalInfo } from '../data/portfolio.js'; // Solo importamos personalInfo
import '../styles/components/contact-section.css'; // Importa el CSS aquí
---

<section id="contact" class="contact-section section-card">
    <div class="container">
        <h2>Contáctame</h2>
        <p class="contact-intro">{personalInfo.contactIntro}</p> {/* Usa personalInfo.contactIntro */}
        <div class="contact-info">
            {personalInfo.email && (
                <p><i class="fas fa-envelope"></i> Email: <a href={`mailto:${personalInfo.email}`}>{personalInfo.email}</a></p>
            )}
            {personalInfo.linkedinUrl && (
                <p><i class="fab fa-linkedin"></i> LinkedIn: <a href={personalInfo.linkedinUrl} target="_blank" rel="noopener noreferrer">{personalInfo.linkedinUrl.replace('https://www.linkedin.com/', '')}</a></p>
            )}
            {personalInfo.githubUrl && (
                <p><i class="fab fa-github"></i> GitHub: <a href={personalInfo.githubUrl} target="_blank" rel="noopener noreferrer">{personalInfo.githubUrl.replace('https://github.com/', '')}</a></p>
            )}
            <!--personalInfo.phone && (
                <p><i class="fas fa-phone"></i> Teléfono: <a href={`tel:${personalInfo.phone}`}>{personalInfo.phone}</a></p>
            )}
            {personalInfo.twitterUrl && (
                <p><i class="fab fa-twitter"></i> Twitter/X: <a href={personalInfo.twitterUrl} target="_blank" rel="noopener noreferrer">{personalInfo.twitterUrl.replace('https://twitter.com/', '')}</a></p>
            )}-->
        </div>
    </div>
</section>

