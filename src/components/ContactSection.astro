---
import { personalInfo } from '../data/portfolio.js';
import '../styles/components/contact-section.css';
---

<section id="contact" class="contact-section section-card">
    <div class="container">
        <h2>Contáctame</h2>
        <p class="contact-intro">{personalInfo.contactIntro}</p>
        <div class="contact-info">
            {personalInfo.email && (
                <p><i class="fas fa-envelope"></i> Email: <a href={`mailto:${personalInfo.email}`}>{personalInfo.email}</a></p>
            )}
            {personalInfo.githubUrl && (
                <p><i class="fab fa-github"></i> GitHub: <a href={personalInfo.githubUrl} target="_blank" rel="noopener noreferrer">{personalInfo.githubUrl.replace('https://github.com/', '')}</a></p>
            )}
        </div>

        <div class="contact-form-container">
            <form action="https://formspree.io/f/mdkzzkzl" method="POST" class="contact-form">
                <div class="form-group">
                    <label for="name">Nombre:</label>
                    <input type="text" id="name" name="name" required placeholder="Tu nombre completo">
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required placeholder="tu.email@ejemplo.com">
                </div>

                <div class="form-group">
                    <label for="message">Mensaje:</label>
                    <textarea id="message" name="message" rows="6" required placeholder="¿En qué puedo ayudarte?"></textarea>
                </div>

                <button type="submit" class="btn primary-btn">Enviar Mensaje</button>
            </form>
        </div>
    </div>
</section>
