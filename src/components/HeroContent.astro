---
import { personalInfo } from '../data/portfolio.js';
---

<section id="hero" class="hero-section">
    <div class="container hero-content-wrapper">
        <div class="bio-area">
            <h1>{personalInfo.name}</h1>
            <p class="tagline">{personalInfo.tagline}</p>
            <p>{personalInfo.bio}</p>
            <a href="#contact" class="btn primary-btn">Â¡Hablemos!</a>
        </div>
    </div>
</section>

<style>
    .hero-section {
        text-align: center;
        padding: 80px 20px;
        background-color: var(--bg-light);
        border-radius: 12px;
        box-shadow: 0 6px 20px var(--shadow-color);
        margin-bottom: 40px;
    }

    .hero-content-wrapper {
        display: block;
        text-align: center;
    }

    .bio-area {
        max-width: 700px;
        margin: 0 auto;
    }

    .bio-area h1 {
        font-size: 3.5em;
        margin-bottom: 10px;
        color: var(--primary-color);
    }

    .bio-area .tagline {
        font-size: 1.6em;
        margin-bottom: 25px;
        color: var(--text-light);
    }

    .bio-area p {
        font-size: 1.1em;
        margin-bottom: 40px;
        text-align: center;
        color: var(--secondary-color);
    }

    .social-links-container {
        display: none;
    }

    @media (max-width: 768px) {
        .hero-section {
            padding: 40px 15px;
            margin-bottom: 30px;
        }

        .bio-area h1 {
            font-size: 2.5em;
        }

        .bio-area .tagline {
            font-size: 1.3em;
        }

        .bio-area p {
            font-size: 1em;
        }
    }
</style>
